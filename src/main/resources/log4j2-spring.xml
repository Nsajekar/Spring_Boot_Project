<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<!-- Custom log file path -->
		<Property name="LOG_PATH">${sys:LOG_PATH:-./logs}</Property>
		<Property name="LOG_FILE_NAME">application.log</Property>
		<Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %c{1} - %msg%n</Property>
	</Properties>
	
	<Appender>
		<!-- File Appender -->
		<RollingFile type="File" name="FileAppender" fileName="${LOG_PATH}/${LOG_FILE_NAME}"
			filePattern="${LOG_PATH}/application-%d{yyyy-MM-dd-HH-mm-ss}-%i.log">
			<PatternLayout>
				<pattern>${LOG_PATTERN}</pattern>
			</PatternLayout>
			<Policies>
				<CronTriggeringPolicy schedule="0 0 0 * * ?" />
				<SizeBasedTriggeringPolicy size="100MB" />
			</Policies>
		</RollingFile>
		
		<!-- Console Appender -->
		<Console name="Console" target="SYSTEM.OUT">
			<PatternLayout>
				<pattern>${LOG_PATTERN}</pattern>
			</PatternLayout>
		</Console>
	</Appender>
	
	<Loggers>
		<!-- Custom Logger -->
		<Logger name="com.spring" level="info" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Logger>
		<!-- Root Logger -->
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Root>
	</Loggers>
</Configuration>

